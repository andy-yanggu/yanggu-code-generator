<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yanggu.code.generator.mapper.EnumItemMapper">

    <!-- 所有字段 -->
    <sql id="allColumns">
        id,
        enum_id,
        enum_item_name,
        enum_item_code,
        enum_item_desc,
        create_time,
        update_time,
        is_delete
    </sql>

    <!-- 过滤SQL -->
    <sql id="whereSQL">
        <!-- 这里写过滤语句，过滤项需要加query前缀 -->
    </sql>

    <!-- 排序SQL -->
    <sql id="orderBySQL">
        <if test="query.orders != null and query.orders.size() > 0">
            ORDER BY
            <foreach collection="query.orders" item="order" separator=",">
                ${order.column} <if test="order.isAsc">ASC</if><if test="!order.isAsc">DESC</if>
            </foreach>
        </if>
    </sql>

    <!-- Entity类字段映射 -->
    <resultMap type="com.yanggu.code.generator.domain.entity.EnumItemEntity" id="enumItemMap">
        <id property="id" column="id"/>
        <result property="enumId" column="enum_id"/>
        <result property="enumItemName" column="enum_item_name"/>
        <result property="enumItemCode" column="enum_item_code"/>
        <result property="enumItemDesc" column="enum_item_desc"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="isDelete" column="is_delete"/>
    </resultMap>

    <!-- Entity分页 -->
    <select id="entityPage" resultMap="enumItemMap">
        SELECT
            <include refid="allColumns"/>
        FROM
            gen_enum_item
        <where>
            is_delete = 0
            <include refid="whereSQL"/>
        </where>
        <include refid="orderBySQL"/>
    </select>

    <!-- Entity列表 -->
    <select id="entityList" resultMap="enumItemMap">
        SELECT
            <include refid="allColumns"/>
        FROM
            gen_enum_item
        <where>
            is_delete = 0
            <include refid="whereSQL"/>
        </where>
        <include refid="orderBySQL"/>
    </select>

    <!-- VO分页 -->
    <select id="voPage" resultType="com.yanggu.code.generator.domain.vo.EnumItemVO">
        SELECT
            <include refid="allColumns"/>
        FROM
            gen_enum_item
        <where>
            is_delete = 0
            <include refid="whereSQL"/>
        </where>
        <include refid="orderBySQL"/>
    </select>

    <!-- VO列表 -->
    <select id="voList" resultType="com.yanggu.code.generator.domain.vo.EnumItemVO">
        SELECT
            <include refid="allColumns"/>
        FROM
            gen_enum_item
        <where>
            is_delete = 0
            <include refid="whereSQL"/>
        </where>
        <include refid="orderBySQL"/>
    </select>

</mapper>